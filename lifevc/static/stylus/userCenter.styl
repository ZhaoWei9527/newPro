html
  font-size 10px

header
  padding 0
  width 100%
  background-color #88b84b
  position fixed
  top 0
  z-index 999
  .header-content
    width 100%
    margin 0 auto
    position relative
  .header-title
    margin 0 auto
    line-height 4rem
    font-size 2rem
    text-align center
    color #ffffff
    width 80%
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
  a
    .editcart
      font-size 1.8rem
      color #ffffff
      line-height 4rem
      margin-right 2%
      position absolute
      right 2%
      top 0
      z-index 9
.content-wrapper
  width 100%
  margin 0 auto
  //margin-top 4rem
  //position absolute
  //top 0
  //bottom 0
  color #2e2e2e
  background-color #eeeeee
  .content
    padding-bottom 4.5rem
    overflow hidden
    .acct-user-wrap
      width 100%
      height 9rem
      background-image url(../../static/img/userCenter/userbackground.png)
      background-size 100% 100%
      background-repeat no-repeat
      .acct-nolog
        width 100%
        overflow hidden
        text-align center
        margin 0 auto
        padding .5rem 0 0
        .state
          text-align center
          font-size 1.6rem
          line-height 3rem
          display block
          color #222
        .btn-entry
          display inline-block
          color #88b84b
          padding 0 10px
          height 3rem
          background hsla(0,0%,100%,.4)
          border 1px solid #88b84b
          border-radius 1.5rem
          margin .5rem auto 0
          text-align center
          font-size 1.6rem
          line-height 3rem
          a
            display inline-block
            color #88b84b
            padding 0 10px
          .split
            width 1px
            height 1.2rem
            display inline-block
            border-left 1px solid #88b84b
    .dashboard-order
      width 100%
      overflow hidden
      background-color #ffffff
      border-top 1px solid #eeeeee
      margin 0 auto
      ul
        width 100%
        height 5rem
        overflow hidden
        border-bottom 1px solid #eeeeee
        &>li:last-child
          border-right none
        li
          width 33%
          height 2.5rem
          float left
          border-right 1px solid #dedede
          line-height 2rem
          margin 1.5rem 0 0
          a
            display block
            text-align center
            color #585858
            .item-title
              display inline-block
              vertical-align 56%
              font-size 1.2rem
              color #585858
              line-height 2.5rem
            .iconfont
                margin-right 5px
                vertical-align 56%
                font-size 25px
    .dashboard
      ul
        margin-bottom 1rem
        li
          width 100%
          height 5rem
          overflow hidden
          background-color #ffffff
          border-bottom 1px solid #eeeeee
          border-top 1px solid #eeeeee
          margin -1px auto 0
          a
            width 100%
            height 5rem
            display flex
            justify-content space-around
            padding 0 3px 0 10px
            .item-title
              flex 10
              display inline-block
              line-height 5rem
              vertical-align middle
              font-size 1.4rem
              color #585858
              margin-left 8px
            .iconfont
              flex 1
              display flex
              align-items center
              font-size 25px
              vertical-align middle
            .icon-orders
              color #88b84b
            .icon-qianjin
              font-size 20px
              color #88b84b
            .icon-youhui
              color rgb(58,116,150)
            .icon-buchongiconsvg07
              color rgb(250,202,46)
            .icon-fapiao
              color rgb(255,44,14)
            .icon-mima
              color rbg(117,207,219)
            .icon-jianyiyijian
              color rgb(240,195,186)
            .icon-kehu
              color rgb(216,0,102)
            .icon-dizhi
              color rgb(69,97,51)
            .icon-shoujiyanzheng
              color rgb(202,160,102)

    .acct-logout
      display none
      .btn-logout
        height 4rem
        background-color #ee7621
        border-radius .5rem
        line-height 2.6rem
        color #ffffff
      .btn
        color #ffffff
        font-size 1.9rem
        width 88%
        margin-top 20px
        margin-left 6%
        margin-bottom 20%
